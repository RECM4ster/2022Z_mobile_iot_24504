<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaswordManagerMobileApp.Register">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Register Page"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                />

            <Entry x:Name="Username" Placeholder="Username" TextColor="White"/>
            <Entry x:Name="Email" Placeholder="Email" Keyboard="Email" TextColor="White" />
            <Entry x:Name="Password" Placeholder="Password" IsPassword="True" />
            <Button Text="Register Account" x:Name="RegisterButton" Clicked="RegisterButtonClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
