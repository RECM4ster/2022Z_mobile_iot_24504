<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaswordManagerMobileApp.DeletePassword">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="New Password Page"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                />

            <Entry x:Name="ServiceName"  TextColor="White" IsReadOnly="true"/>
            <Entry x:Name="Login"   TextColor="White" IsReadOnly="true"/>
            <Entry x:Name="PasswordValue"  TextColor="White" IsReadOnly="true"/>
            <Button Text="Delete Password" x:Name="DeletePasswordButton" Clicked="DeletePasswordButtonClicked" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
