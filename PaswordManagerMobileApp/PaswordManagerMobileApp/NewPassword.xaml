<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaswordManagerMobileApp.NewPassword">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="New Password Page"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                />

            <Entry x:Name="ServiceName" Placeholder="ServiceName" TextColor="White"/>
            <Entry x:Name="Login" Placeholder="Login"  TextColor="White"/>
            <Entry x:Name="PasswordValue" Placeholder="PasswordValue" TextColor="White"/>
            <Entry x:Name="ServiceUrl" Placeholder="ServiceUrl"  TextColor="White"/>
            <Button Text="Add Password for this user" x:Name="NewPasswordButton" Clicked="AddPasswordButtonClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
